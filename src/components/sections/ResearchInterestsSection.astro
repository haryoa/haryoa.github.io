---
const { profile } = Astro.props;
---

<section id="Research Interests" class="space-y-6">
  <h2 class="text-2xl font-light text-[#4A5D4F]">Research Interests</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {profile.researchInterests.map(interest => (
      <div class="p-4 bg-[#F5F1E8]/30 rounded-lg hover:bg-[#F5F1E8]/50 transition-colors duration-300">
        <div class="flex items-start gap-3">
          <span class="text-2xl">{interest.icon}</span>
          <div>
            <h3 class="font-medium text-[#4A5D4F]">{interest.title}</h3>
            <p class="text-sm text-[#4A5D4F]/70 mt-1">{interest.description}</p>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
